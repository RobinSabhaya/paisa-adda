                padding-left: 38px;
                padding-top: 35px;
            }

            .description-section {
                margin-top: 49px;
            }

            .feature-desc {
                padding-bottom: 24px;
            }

            .emoji-table {
                width: 330px;
                margin: 0;
            }

            .emoji_wrapper {
                padding-left: 120px;
            }

            .emoji-section {
                height: 35px;
                width: 34px;
            }

            .care-desc {
                padding-bottom: 30px;
            }

            .footer-desc {
                max-width: 350px;
            }

            .soical-icon {
                padding-bottom: 33px;
            }
