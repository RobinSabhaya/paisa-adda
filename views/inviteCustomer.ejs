                width: 100%;
                margin: 0 auto;
            }

            .Welcome-section {
                padding-left: 10px;
                padding-top: 10px;
                display: block;
            }

            .welcome-heading {
                font-size: 17px;
                margin: 0;
                color: #003443;
                line-height: 18px;
                font-weight: 700;
                padding-bottom: 8px;
            }

            .feature-image {
                width: 20%;
                margin: 0px auto;
                text-align: center;
            }

            .description-section {
                padding-top: 30px;
            }

            .emoji-section {
                height: 30px;
                width: 30px;
            }

            .footer-desc {
                text-align: center;
                max-width: 300px;
            }
        }

        @media (min-width: 543px) {
            .main-bg {
                padding-top: 53px;
                padding-bottom: 55px;
                width: 100%;
                max-width: 735px;
                margin: 0 auto;
            }

            .bannerimg {
                display: block;
            }

            .welcome-heading {
                font-size: 18px;
            }

            .view-button {
                margin-bottom: 34px;
            }

            .feature-heading {
                padding-left: 85px;
                padding-top: 34px;
            }

            .emoji-name {
                font-size: 12px;
            }

